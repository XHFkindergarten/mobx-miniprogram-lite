<block>
  <view class="footer">
    <view class="todo-count">
      <text class="strong">{{todo1.left + ' '}}</text>
      items left
    </view>
    <view class="filters">
      <view class="ib" bindtap="showAll">
        <text class="{{todo1.type === 'all' ? 'selected' : ''}}">All</text>
      </view>
      <view class="ib" bindtap="showActive">
        <text class="{{todo1.type === 'active' ? 'selected' : ''}}">Active</text>
      </view>
      <view class="ib" bindtap="showDone">
        <text class="{{todo1.type === 'done' ? 'selected' : ''}}">Done</text>
      </view>
    </view>
    <block wx:if="{{todo1.done > 0}}">
      <button class="clear-completed" bindtap="clearDone">Clear done</button>
    </block>
    <block wx:else>
      <button class="clear-completed" bindtap="toggleAll">Finish done</button>
    </block>
  </view>
</block>