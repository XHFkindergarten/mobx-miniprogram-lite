{
  "include": ["src/**/*", "types"],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "outDir": "lib",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react",
    "baseUrl": "./",
    "rootDir": "./src",
    // import emit helpers from tslib
    "importHelpers": true,
    "paths": {
      "@/*": ["src/*"]
    },
    /* noEmit - Esbuild builds (emits) files, not tsc. */
    // "noEmit": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./lib",
    /* Additional Options */
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "wechat-miniprogram"
    ],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
  }
}
